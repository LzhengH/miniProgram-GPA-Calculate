.root {
  width: 100%;
  height: 100%;
  background-color: #70c7da;
  position: relative;
}

.scene {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  z-index: 1;
}

.background-image {
  height: 100%;
  position: absolute;
  width: 100%;
  left: 0px;
  top: 0px;
  z-index: 0
}
.about-icon{
  
  margin-top: 50rpx;
  margin-left: 650rpx;
}

.title {
  flex: 1;
  color: white;
  font-size: 80rpx;
  margin-top: 120rpx;
  z-index: 100;
}

.btn-group {
  flex: 1;
  text-align: center
}

.van-btn {
  width: 600rpx;
  z-index: 100;
  margin-bottom: 40rpx;
  align-items: center;
}

.text {
  font-size: 50rpx;
}

