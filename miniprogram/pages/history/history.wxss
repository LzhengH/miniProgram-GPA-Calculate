/* 底部view */

.root {
  width: 100%;
  height: 100%;
  position: relative;
}

/* 主场景 */

.scene {
  height: 100vh;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 无记录的view */

.none-view {
  margin-top: 40%;
  font-size: 56rpx;
  color: gray;
}

/* 记录标题 */

.view-itemTitle {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  width: 750rpx;
}

/* 记录标题的字体 */

.text-itemTitle {
  font-size: 36rpx;
  color: #394ca3;
}

/* 分隔线 */

.divLine-title {
  background: #394ca3;
  width: 100%;
  height: 3rpx;
}

/* 奇数项 */

.view-item-odd {
  background-color: rgb(212, 212, 212);
  margin: 3rpx auto;
  padding-top: 12rpx;
}

/* 偶数项 */

.view-item {
  margin: 2rpx auto;
  padding-top: 12rpx;
}

/* 循环项文字 */

.text-item {
  color: #394ca3;
  font-size: 36rpx;
}

/* 向上/下箭头 */

.icon-item {
  width: 50rpx;
  height: 60rpx;
  text-align: center;
}

/* 隐藏行 */

.detail {
  margin: 10rpx auto;
  font-size: 25rpx;
  line-height: 40rpx;
  display: block;
}

/* 隐藏行按钮 */
.detail-btn{
  display: flex;
  width: 160rpx;
  height: 70rpx;
  padding-top: 16rpx;
  justify-content:flex-start;
  align-items:center;

}
.button-hover{
  
}
/* 隐藏行按钮图标 */
.detail-icon{
  margin-left: -20rpx;
}
/* 隐藏行按钮文本 */
.detail-text{
  font-size: 38rpx;
  color: #0b18a3;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 16rpx;
}
